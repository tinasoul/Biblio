<h1>Books</h1>

<table>
  <tr>
    <th>Pic</th>
    <th>Title</th>
    <th>Author first name</th>
    <th>Author last name</th>
    <th>Isbn</th>
    <th>Rating</th>
    <th>Review</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td width="50px"><%=image_tag(book.picture_url) if book.picture.present?%></td>
    <td><%= book.title %></td>
    <td><%= book.author_first_name %></td>
    <td><%= book.author_last_name %></td>
    <td><%= book.isbn %></td>
    <td><%= book.rating %></td>
    <td><%= book.review %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

